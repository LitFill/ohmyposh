{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "blue-bell": "#9aa5ce",
    "blue-black": "#565f89",
    "celeste-blue": "#b4f9f8",
    "light-sky-blue": "#7dcfff",
    "main-bg": "#24283b",
    "pastal-grey": "#cfc9c2",
    "pistachio-green": "#9ece6a",
    "t-background": "p:main-bg",
    "terminal-black": "#414868",
    "terminal-blue": "#7aa2f7",
    "terminal-green": "#73daca",
    "terminal-magenta": "#bb9af7",
    "terminal-red": "#f7768e",
    "terminal-white": "#c0caf5",
    "terminal-yellow": "#e0af68",
    "white-blue": "#a9b1d6"
  },
  "secondary_prompt": {
    "template": "» ",
    "foreground": "p:terminal-blue",
    "background": "transparent"
  },
  "transient_prompt": {
    "template": "λ ",
    "foreground": "p:terminal-blue",
    "background": "transparent",
    "newline": true
  },
  "console_title_template": " {{ .Shell }} in {{ .Folder }} :: {{if .Root}}Admin{{else}}LitFill{{end}}",
  "terminal_background": "p:t-background",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "p:terminal-blue",
          "background": "transparent",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "properties": {
            "macos": "mac"
          }
        },
        {
          "style": "plain",
          "template": "λ ",
          "foreground": "p:terminal-blue",
          "background": "transparent",
          "type": "text"
        },
        {
          "properties": {
            "cycle": [
              "P:terminal-red",
              "p:terminal-green",
              "p:terminal-yellow",
              "p:terminal-blue",
              "p:terminal-magenta"
            ],
            "cycle_folder_separator": true,
            "mapped_locations": {
              "/home/litfill/proyek": "☪  MyProyek ☪ "
            },
            "style": "full"
          },
          "style": "plain",
          "template": "<b>{{ .Path }}</b> <p:light-sky-blue>⚡</>",
          "foreground": "p:terminal-magenta",
          "type": "path"
        },
        {
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_status": true
          },
          "style": "plain",
          "template": "({{ .HEAD}}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }})",
          "foreground": "p:light-sky-blue",
          "type": "git",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:terminal-red{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0)}}p:light-sky-blue {{ end }}",
            "{{ if gt .Ahead 0 }}p:terminal-blue{{ end }}",
            "{{ if gt .Behind 0 }}p:celeste-blue{{ end }}"
          ]
        },
        {
          "style": "plain",
          "template": " \uf00d",
          "foreground": "p:terminal-red",
          "type": "status"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "style": "plain",
          "template": "\ue718 {{ .Full }} ",
          "foreground": "p:pistachio-green",
          "type": "node"
        },
        {
          "style": "plain",
          "template": "Go {{ .Full}}",
          "foreground": "p:light-sky-blue",
          "type": "go"
        },
        {
          "style": "plain",
          "template": " \ue61f {{ .Full }}",
          "foreground": "p:terminal-magenta",
          "background": "p:terminal_background",
          "type": "haskell"
        },
        {
          "style": "plain",
          "template": " \ue67a {{ .Full }} ",
          "foreground": "#d08770",
          "type": "ocaml"
        },
        {
          "style": "plain",
          "template": " \ue620 {{ .Full }} ",
          "foreground": "p:terminal-blue",
          "background": "p:terminal_background",
          "type": "lua"
        },
        {
          "properties": {
            "command": "git log --pretty=format:%cr -1 || date +%H:%M:%S",
            "shell": "bash"
          },
          "style": "plain",
          "foreground": "p:white-blue",
          "type": "command"
        },
        {
          "properties": {
            "charged_icon": "\ue22f ",
            "charging_icon": "\u2386 ",
            "discharging_icon": "۞  "
          },
          "style": "plain",
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}\uf295 ",
          "foreground": "#193549",
          "background": "p:terminal_background",
          "type": "battery",
          "foreground_templates": [
            "{{if eq \"Charging\" .State.String}}p:terminal-blue{{end}}",
            "{{if lt 20.0 .Percentage}}p:terminal-red{{end}}",
            "{{if eq \"Discharging\" .State.String}}p:terminal-yellow{{end}}",
            "{{if eq \"Full\" .State.String}}p:terminal-green{{end}}"
          ]
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "style": "plain",
          "template": "»",
          "foreground": "p:pistachio-green",
          "type": "text"
        }
      ],
      "newline": true
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "properties": {
            "always_enabled": true,
            "style": "austin",
            "threshold": 500
          },
          "style": "plain",
          "template": " <p:terminal-white>\u29d7</> {{ .FormattedMs }} ",
          "foreground": "p:terminal-blue",
          "background": "p:terminal_background",
          "type": "executiontime"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
